$('.map_box').hide(); //hide
$('.map_nigeria').show(); //set default class to be shown here, or remove to hide all

$('select').change(function () { //on change do stuff
    $('.map_box').hide(); //hide all with .box class
    $('.' + $(this).val()).show(); //show selected option's respective element
});

function initApp() {
    var locations = [
        [
            "Lagos State Office, Nigeria",
            "Plot 1648C, Oko-Awo Close,Victoria Island",
            "6.4285904",
            "3.4254609"
        ],
        [
            "Rivers State Office, Nigeria",
            "2nd Floor, Plot 101A Brookstone Close Off Prof Abowei Street, GRA Phrase 3, Port Harcourt",
            "4.8088139",
            "6.9963611"
        ],
        [
            "Abuja Office, Nigeria",
            "6th floor, Churchgate Towers, 473 Constitution Ave. Central Business District, Abuja",
            "9.0492467",
            "7.4724744"
        ],
        [
            "Oyo State Office, Nigeria",
            "1st floor,33 Samonda, UI Road",
            "7.4314856",
            "3.9012409"
        ]

    ];

    gmarkers = [];

    var map = new google.maps.Map(document.getElementById('map-nigeria'), {
        zoom: 6,
        center: new google.maps.LatLng(9.0544966, 7.3243166),
        mapTypeId: google.maps.MapTypeId.ROADMAP
    });

    var infowindow = new google.maps.InfoWindow();


    function createMarker(latlng, html) {
        var marker = new google.maps.Marker({
            position: latlng,
            // icon: {
            //    path: google.maps.SymbolPath.CIRCLE,
            //    scale: 10
            //  },
            map: map
        });

        google.maps.event.addListener(marker, 'click', function () {
            infowindow.setContent(html);
            infowindow.open(map, marker);
        });
        return marker;
    }

    for (var i = 0; i < locations.length; i++) {
        gmarkers[locations[i][0]] =
            createMarker(new google.maps.LatLng(locations[i][2], locations[i][3]), locations[i][0] + "<br>" + locations[i][1]);
    }
};

initApp();



